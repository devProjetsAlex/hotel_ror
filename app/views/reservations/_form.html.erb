  <% if @reservation.errors.any? %>
    <h2> The following errors prevented the reservation from being saved </h2>
    <ul>
    <% @reservation.errors.full_messages.each do |msg| %>
      <li>  <%= msg %> </li>
    <% end %>
    </ul>
  <% end %>


<%= form_with(model: @reservation,local: true) do |f| %>

  <div class="form-row">
  <div class="form-group col-md-2">
    <%= f.label :Arrivé, class:"col-8 col-form-label"  %>
    <%= f.date_field :date, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group col-md-2">
    <%= f.label :Départ %>
    <%= f.date_field :date, autofocus: true, class: 'form-control' %>
  </div>
    <div class="form-group col-md-2">
    <%= f.label :Chambre %>
    <%= f.number_field :room, autofocus: true, class: 'form-control' %>    
  </div>
  </div>

    <div class="form-group row ">
      <%= f.label :client_id,class:"col-8 col-form-label" %> <br/>
      <%= f.text_field :client_id, class: 'form-control' %>
    </div>


 <div class="form-group row ">
      <%= f.label :client_email, class:"col-8 col-form-label"%> <br/>
      <%= f.text_field :client_email, class: 'form-control' %>
   </div>

<div class="form-group row ">
      <%= f.label :client_request,class:"col-8 col-form-label" %> <br/>
      <%= f.text_field :client_request, class: 'form-control' %>
   </div>

 <div class="form-group row ">
   <button type="button" class="btn btn-sm btn-outline-secondary col-2 col-form-label"><%= f.submit %> </button>
  <button type="button" class="btn btn-sm btn-outline-secondary col-2 col-form-label"><%= link_to 'Retour au réservation', reservations_path%></button>
   </div>
  <% end %> 

  
