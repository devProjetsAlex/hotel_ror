<p>Liste des réservation </p>

<table>
  <thead>
      <tr>
				<th> Date </th>
				<th> Chambre </th>
				<th> Nom du client </th>
				<th> Email </th>
				<th> Demande spécial </th>
				<th> Action </th>
      </tr>
  </thead>

	
	<tbody>
		<% @reservations.each do |reservation| %>
			<tr>
				<td><%= reservation.date %> </td>
				<td><%= reservation.room %> </td>
				<td><%= reservation.client_id %> </td>
				<td><%= reservation.client_email %> </td>
				<td><%= reservation.client_request %> </td>
				<td>
					<%= link_to 'Voir la réservation', reservation_path(reservation)%>
					<%= link_to 'Annulé la réservation', reservation_path(reservation), method: :delete %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>